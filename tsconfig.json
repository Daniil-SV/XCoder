{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": false,
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "./",
        "watch": false,
        "declaration": true,
        "declarationDir": "types",
        "removeComments": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "examples"
    ]
}